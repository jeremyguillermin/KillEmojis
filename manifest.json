{
    "manifest_version": 2,
    "name": "Remove Emojis",
    "version": "1.0",
    "description": "Removes emojis from Twitter, Facebook and Messenger",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://tweetdeck.twitter.com/*",
                "https://www.facebook.com/*",
                "https://www.messenger.com/*",
                "https://bsky.app/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}